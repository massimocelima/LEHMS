<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_root"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
 
    <LinearLayout 
        style="@style/HeaderContainer">

		<ImageView 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content" 
			android:src="@drawable/dashboard_btn_emergency_pressed"></ImageView>
			
	    <LinearLayout 
		    android:orientation="vertical"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    >
			
			<TextView 
				android:id="@+id/activity_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Raise Alarm"
		        style="@style/HeaderTitle" />
	   		<TextView 
				android:id="@+id/activity_client_details_sub_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        style="@style/HeaderSubTitle" 
		        android:text="Are you sure you want to raise and Emergency Alarm?"
		        />
        </LinearLayout>

	</LinearLayout>

    <LinearLayout
		android:layout_width="fill_parent"
	  	android:layout_height="fill_parent"
	  	android:orientation="vertical">
		
		<TextView
			android:id="@+id/activity_raise_alarm_timer"
			android:layout_width="fill_parent"
	  		android:layout_height="wrap_content"
	  		android:gravity="center"
	  		android:textSize="10pt"
	  		android:text="The alarm will be sent in\n\r10 seconds"
	  		android:padding="4dip"	  		>
	  	</TextView>
		
		
		<Button 
			android:layout_width="fill_parent"
	  		android:layout_height="wrap_content"
	  		android:text="Send the alarm"
	  		android:textSize="14pt"
	  		android:textColor="#FFAA0000"
	  		android:paddingTop="10dip"
	  		android:paddingBottom="10dip"
	  		android:onClick="onRaiseAlarmClick"
	  		></Button>

		<Button 
			android:layout_width="fill_parent"
	  		android:layout_height="wrap_content"
	  		android:text="Cancel the alarm"
	  		android:textColor="#FF00901b"
	  		android:textSize="14pt"
	  		android:paddingTop="10dip"
	  		android:paddingBottom="10dip"
	  		android:onClick="onCancelAlarmClick"
	  		></Button>
		
	</LinearLayout>
	

	
	
</LinearLayout>
