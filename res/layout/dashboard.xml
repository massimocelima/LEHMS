<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_root"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <!-- 
    <include layout="@layout/colorstrip"/>
 	-->
 
   <LinearLayout style="@style/TitleBar">
        
        <ImageView style="@style/TitleBarSeparator" />
        <TextView style="@style/TitleBarText" android:text="LEHMS V2" />

    </LinearLayout>
 
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="6dip">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button android:id="@+id/dashboard_btn_roster"
                style="@style/DashboardButton"
                android:onClick="onMyRosterClick"
                android:text="My Roster"
                android:drawableTop="@drawable/dashboard_btn_my_roster"/>
            <Button android:id="@+id/dashboard_btn_schedule"
                style="@style/DashboardButton"
                android:onClick="onScheduleClick"
                android:text="Schedule??"
                android:drawableTop="@drawable/dashboard_btn_schedule"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button android:id="@+id/dashboard_btn_other"
                style="@style/DashboardButton"
                android:text="Help"
                android:drawableTop="@drawable/dashboard_btn_my_roster"/>
            <Button android:id="@+id/dashboard_btn_other2"
                style="@style/DashboardButton"
                android:text="Call Someone"
                android:drawableTop="@drawable/dashboard_btn_schedule"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button android:id="@+id/dashboard_btn_map"
                style="@style/DashboardButton"
                android:onClick="onClientsClick"
                android:text="Clients"
                android:drawableTop="@drawable/dashboard_btn_clients"/>
            <Button android:id="@+id/dashboard_btn_map"
                style="@style/DashboardButton"
                android:onClick="onMapClick"
                android:text="Navigation"
                android:drawableTop="@drawable/dashboard_btn_map"/>
        </LinearLayout>
    </LinearLayout>

  
</LinearLayout>
