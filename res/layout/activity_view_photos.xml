<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_root"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
 
   <LinearLayout style="@style/TitleBar">
        
		<ImageButton style="@style/TitleBarAction"
            android:contentDescription="Home"
            android:src="@drawable/ic_title_home"
            android:onClick="onHomeClick" />
        
        <ImageView style="@style/TitleBarSeparator" />
        <TextView 
	        android:id="@+id/title_bar_title"
        	style="@style/TitleBarText" 
        	android:text="Take a Photo" />
        <!-- <View style="@style/TitleBarSpring" /> -->

		<ImageView style="@style/TitleBarSeparator" />
        <ImageButton style="@style/TitleBarAction"
            android:contentDescription="Emergency"
            android:src="@drawable/ic_title_emergency"
            android:onClick="onEmergencyClick" />
            
    </LinearLayout>
 
     <LinearLayout 
        style="@style/HeaderContainer">

		<ImageView 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content" 
			android:src="@drawable/dashboard_btn_camera_pressed"></ImageView>
			
	    <LinearLayout 
		    android:orientation="vertical"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    >
			
			<TextView 
				android:id="@+id/activity_view_photos_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="View Photos"
		        android:maxLines="1"
		        android:ellipsize="end"
		        style="@style/HeaderTitle" />
	   		<TextView 
				android:id="@+id/activity_view_photos_sub_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text=""
		        style="@style/HeaderSubTitle" />
	   		<TextView 
				android:id="@+id/activity_view_photos_sub_title2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text=""
		        style="@style/HeaderSubTitle" />
        </LinearLayout>

	</LinearLayout>
	
	<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="6dip">
 
	     <ListView android:id="@+id/android:list"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"/>
 
    </LinearLayout>
	
</LinearLayout>
