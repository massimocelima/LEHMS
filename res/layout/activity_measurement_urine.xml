<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_root"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
 
   <LinearLayout style="@style/TitleBar">
        
		<ImageButton style="@style/TitleBarAction"
            android:contentDescription="Home"
            android:src="@drawable/ic_title_home"
            android:onClick="onHomeClick" />
        
        <ImageView style="@style/TitleBarSeparator" />
        <TextView style="@style/TitleBarText" android:text="Clinical Care Details" />
        <!-- <View style="@style/TitleBarSpring" /> -->

		<ImageView style="@style/TitleBarSeparator" />
        <ImageButton style="@style/TitleBarAction"
            android:contentDescription="Emergency"
            android:src="@drawable/ic_title_emergency"
            android:onClick="onEmergencyClick" />
            
    </LinearLayout>
  
    <LinearLayout 
        style="@style/HeaderContainer">

		<ImageView 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content" 
			android:src="@drawable/dashboard_btn_clinical_details_default"></ImageView>
			
	    <LinearLayout 
		    android:orientation="vertical"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    >
			
			<TextView 
				android:id="@+id/activity_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Urine Measurement"
		        style="@style/HeaderTitle" />
	   		<TextView 
				android:id="@+id/activity_sub_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        style="@style/HeaderSubTitle" />
	   		<TextView 
				android:id="@+id/activity_sub_title2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        style="@style/HeaderSubTitle" />
        </LinearLayout>

	</LinearLayout>
	
  	<ScrollView
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  android:layout_weight="1"
	  android:id="@+id/activity_scroll_view"
	  >
	  
		<LinearLayout
		   	android:id="@+id/activity_container"
			android:layout_width="fill_parent"
		  	android:layout_height="fill_parent"
		  	android:orientation="vertical">
		  	
		  	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			    android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
				style="@style/FormItem"
			    >
			
				<TextView 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				  	android:textAppearance="?android:attr/textAppearanceSmall" 
				  	android:textColor="?android:attr/textColorPrimary" 
				  	android:text="Blood"
				>
				</TextView>
				<EditText 
					android:id="@+id/activity_measurment_urine_blood_edit"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				  	android:textAppearance="?android:attr/textAppearanceSmall" 
				  	android:textColor="?android:attr/textColorPrimary" 
				>
				</EditText>
				
			</LinearLayout>

		  	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			    android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
				style="@style/FormItem"
			    >
			
				<TextView 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				  	android:textAppearance="?android:attr/textAppearanceSmall" 
				  	android:textColor="?android:attr/textColorPrimary" 
				  	android:text="Bilirubin"
				>
				</TextView>
				<EditText 
					android:id="@+id/activity_measurment_urine_bilirubin_edit"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				  	android:textAppearance="?android:attr/textAppearanceSmall" 
				  	android:textColor="?android:attr/textColorPrimary"
				  	android:inputType="numberDecimal" 
				>
				</EditText>
				
			</LinearLayout>

		  	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			    android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
				style="@style/FormItem"
			    >
			
				<TextView 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				  	android:textAppearance="?android:attr/textAppearanceSmall" 
				  	android:textColor="?android:attr/textColorPrimary" 
				  	android:text="Urobilinogen"
				>
				</TextView>
				<EditText 
					android:id="@+id/activity_measurment_urine_urobilinogen_edit"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				  	android:textAppearance="?android:attr/textAppearanceSmall" 
				  	android:textColor="?android:attr/textColorPrimary" 
				  	android:inputType="numberDecimal" 
				>
				</EditText>
				
			</LinearLayout>

		  	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			    android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
				style="@style/FormItem"
			    >
			
				<TextView 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				  	android:textAppearance="?android:attr/textAppearanceSmall" 
				  	android:textColor="?android:attr/textColorPrimary" 
				  	android:text="Ketones"
				>
				</TextView>
				<EditText 
					android:id="@+id/activity_measurment_urine_ketones_edit"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				  	android:textAppearance="?android:attr/textAppearanceSmall" 
				  	android:textColor="?android:attr/textColorPrimary" 
				  	android:inputType="numberDecimal" 
				>
				</EditText>
				
			</LinearLayout>

		  	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			    android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
				style="@style/FormItem"
			    >
			
				<TextView 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				  	android:textAppearance="?android:attr/textAppearanceSmall" 
				  	android:textColor="?android:attr/textColorPrimary" 
				  	android:text="Protein"
				>
				</TextView>
				<EditText 
					android:id="@+id/activity_measurment_urine_protein_edit"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				  	android:textAppearance="?android:attr/textAppearanceSmall" 
				  	android:textColor="?android:attr/textColorPrimary" 
				  	android:inputType="numberDecimal" 
				>
				</EditText>
				
			</LinearLayout>

		  	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			    android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
				style="@style/FormItem"
			    >
			
				<TextView 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				  	android:textAppearance="?android:attr/textAppearanceSmall" 
				  	android:textColor="?android:attr/textColorPrimary" 
				  	android:text="Nitrite"
				>
				</TextView>
				<EditText 
					android:id="@+id/activity_measurment_urine_nitrite_edit"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				  	android:textAppearance="?android:attr/textAppearanceSmall" 
				  	android:textColor="?android:attr/textColorPrimary" 
				  	android:inputType="numberDecimal" 
				>
				</EditText>
				
			</LinearLayout>

		  	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			    android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
				style="@style/FormItem"
			    >
			
				<TextView 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				  	android:textAppearance="?android:attr/textAppearanceSmall" 
				  	android:textColor="?android:attr/textColorPrimary" 
				  	android:text="Glucose"
				>
				</TextView>
				<EditText 
					android:id="@+id/activity_measurment_urine_glucose_edit"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				  	android:textAppearance="?android:attr/textAppearanceSmall" 
				  	android:textColor="?android:attr/textColorPrimary" 
				  	android:inputType="numberDecimal" 
				>
				</EditText>
				
			</LinearLayout>

		  	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			    android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
				style="@style/FormItem"
			    >
			
				<TextView 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				  	android:textAppearance="?android:attr/textAppearanceSmall" 
				  	android:textColor="?android:attr/textColorPrimary" 
				  	android:text="pH"
				>
				</TextView>
				<EditText 
					android:id="@+id/activity_measurment_urine_ph_edit"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				  	android:textAppearance="?android:attr/textAppearanceSmall" 
				  	android:textColor="?android:attr/textColorPrimary" 
				  	android:inputType="numberDecimal" 
				>
				</EditText>
				
			</LinearLayout>

		  	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			    android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
				style="@style/FormItem"
			    >
			
				<TextView 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				  	android:textAppearance="?android:attr/textAppearanceSmall" 
				  	android:textColor="?android:attr/textColorPrimary" 
				  	android:text="Specific Grav."
				>
				</TextView>
				<EditText 
					android:id="@+id/activity_measurment_urine_specific_grav_edit"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				  	android:textAppearance="?android:attr/textAppearanceSmall" 
				  	android:textColor="?android:attr/textColorPrimary" 
				  	android:inputType="numberDecimal" 
				>
				</EditText>
				
			</LinearLayout>
			
			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			    android:orientation="vertical"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
				style="@style/FormItem"
			    >
			
				<TextView 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				  	android:textAppearance="?android:attr/textAppearanceSmall" 
				  	android:textColor="?android:attr/textColorPrimary" 
				  	android:text="Leucocytes"
				>
				</TextView>
				<EditText 
					android:id="@+id/activity_measurment_urine_leucocytes_edit"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				  	android:textAppearance="?android:attr/textAppearanceSmall" 
				  	android:textColor="?android:attr/textColorPrimary" 
				  	android:inputType="numberDecimal" 
				>
				</EditText>
				
			</LinearLayout>
		  	
		</LinearLayout>
	  
	</ScrollView>
	
	<LinearLayout
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@android:style/ButtonBar"
        >
	        
	    <Button 
			android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Cancel"
	        android:onClick="onCancelClick" />

	    <Button 
			android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Save"
	        android:onClick="onSaveClick" />

	</LinearLayout>
  
</LinearLayout>
