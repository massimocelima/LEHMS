<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_root"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

	<include layout="@layout/seperator"></include>  
 
	<LinearLayout
        android:background="@color/background2"
        android:paddingLeft="14dip"
        android:paddingRight="14dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:onClick="onContactsExpanderClick"
        >
        
        <LinearLayout 
		    android:orientation="vertical"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:gravity="center_vertical"
		    >
			<TextView 
				android:id="@+id/activity_client_details_contact_title"
				android:text="Contacts"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        style="@style/HeaderSubTitleTwo" />
		</LinearLayout>
        
   	    <LinearLayout 
		    android:orientation="vertical"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:gravity="center"
		    >
		    <ImageButton 
				 android:id="@+id/activity_client_details_contact_expander"
		    	 android:layout_height="wrap_content" 
				 android:layout_width="wrap_content" 
	             android:background="@null"
	             android:onClick="onContactsExpanderClick" 
	             android:src="@drawable/expander_ic_minimized" />
		</LinearLayout>
	        
    </LinearLayout>
		
	<include layout="@layout/seperator"></include>  
	
	
	<LinearLayout
		android:id="@+id/activity_client_details_contact_container"
        android:paddingLeft="14dip"
        android:paddingRight="14dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        >


	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	    
			<TextView 
				android:id="@+id/activity_client_details_contacts_emergency"
		        android:text="Emergency Contact:"
		        style="@style/FieldsetLabel" />
		
			<TextView 
				android:id="@+id/activity_client_details_contacts_emergency_value"
		        style="@style/FieldsetInput" />
		
		</LinearLayout>

		<include layout="@layout/seperator"></include>

	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	    
			<TextView 
				android:id="@+id/activity_client_details_contacts_carer_name"
		        android:text="Carer Name:"
		        style="@style/FieldsetLabel" />
		
			<TextView 
				android:id="@+id/activity_client_details_contacts_carer_name_value"
		        style="@style/FieldsetInput" />
		
		</LinearLayout>

		<include layout="@layout/seperator"></include>
		
		<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	    
			<TextView 
				android:id="@+id/activity_client_details_contacts_carer_rela"
		        android:text="Carer Relationship:"
		        style="@style/FieldsetLabel" />
		
			<TextView 
				android:id="@+id/activity_client_details_contacts_carer_rela_value"
		        style="@style/FieldsetInput" />
		
		</LinearLayout>

		<include layout="@layout/seperator"></include>

		<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	    
			<TextView 
				android:id="@+id/activity_client_details_contacts_carer_phone"
		        android:text="Carer Phone:"
		        style="@style/FieldsetLabel" />
		
			<TextView 
				android:id="@+id/activity_client_details_contacts_carer_phone_value"
		        style="@style/FieldsetInput" />
		
		</LinearLayout>
		
		<include layout="@layout/seperator"></include>
		
		<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	    
			<TextView 
				android:id="@+id/activity_client_details_contacts_carer_mobile"
		        android:text="Carer Mobile"
		        style="@style/FieldsetLabel" />
		
			<TextView 
				android:id="@+id/activity_client_details_contacts_carer_mobile_value"
		        style="@style/FieldsetInput" />
		
		</LinearLayout>
		
		<include layout="@layout/seperator"></include>
		
	</LinearLayout>
	
</LinearLayout>
