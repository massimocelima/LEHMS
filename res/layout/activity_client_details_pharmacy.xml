<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

	<include layout="@layout/seperator"></include>  
 
	<LinearLayout
        android:background="@color/background2"
        android:paddingLeft="14dip"
        android:paddingRight="14dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:onClick="onPharmacyExpanderClick"
        >
        
        <LinearLayout 
		    android:orientation="vertical"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:gravity="center_vertical"
		    >
			<TextView 
				android:id="@+id/activity_client_details_pharmacy_title"
				android:text="Pharmacy"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        style="@style/HeaderSubTitleTwo" />
		</LinearLayout>
        
   	    <LinearLayout 
		    android:orientation="vertical"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:gravity="center"
		    >
		    <ImageButton 
				 android:id="@+id/activity_client_details_pharmacy_expander"
		    	 android:layout_height="wrap_content" 
				 android:layout_width="wrap_content" 
	             android:background="@null"
	             android:onClick="onPharmacyExpanderClick" 
	             android:src="@drawable/expander_ic_minimized" />
		</LinearLayout>
	        
    </LinearLayout>
		
	<include layout="@layout/seperator"></include>  
	
	
	<LinearLayout
		android:id="@+id/activity_client_details_pharmacy_container"
        android:paddingLeft="14dip"
        android:paddingRight="14dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        >


	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	    
			<TextView 
				android:id="@+id/activity_client_details_pharmacy_name"
		        android:text="Name:"
		        style="@style/FieldsetLabel" />
		
			<TextView 
				android:id="@+id/activity_client_details_pharmacy_name_value"
		        style="@style/FieldsetInput" />
		
		</LinearLayout>

		<include layout="@layout/seperator"></include>

		
		<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	    
			<TextView 
				android:id="@+id/activity_client_details_pharmacy_address"
		        android:text="Address:"
		        style="@style/FieldsetLabel" />
		
			<TextView 
				android:id="@+id/activity_client_details_pharmacy_address_value"
		        style="@style/FieldsetInput" />
		
		</LinearLayout>

		<include layout="@layout/seperator"></include>

		<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	    
			<TextView 
				android:id="@+id/activity_client_details_pharmacy_email"
		        android:text="Email:"
		        style="@style/FieldsetLabel" />
		
			<TextView 
				android:id="@+id/activity_client_details_pharmacy_email_value"
		        style="@style/FieldsetInput" />
		
		</LinearLayout>
		
		<include layout="@layout/seperator"></include>
		
		<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	    
			<TextView 
				android:id="@+id/activity_client_details_pharmacy_phone"
		        android:text="Phone:"
		        style="@style/FieldsetLabel" />
		
			<TextView 
				android:id="@+id/activity_client_details_pharmacy_phone_value"
		        style="@style/FieldsetInput" />
		
		</LinearLayout>
		
		<include layout="@layout/seperator"></include>
		
		<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	    
			<TextView 
				android:id="@+id/activity_client_details_pharmacy_fax"
		        android:text="Fax:"
		        style="@style/FieldsetLabel" />
		
			<TextView 
				android:id="@+id/activity_client_details_pharmacy_fax_value"
		        style="@style/FieldsetInput" />
		
		</LinearLayout>
		
		<include layout="@layout/seperator"></include>
		
	</LinearLayout>
	
</LinearLayout>
